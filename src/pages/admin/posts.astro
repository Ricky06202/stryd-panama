---
import AdminLayout from '../../layouts/AdminLayout.astro'
import { getDb } from '../../db/client'
import { posts } from '../../db/schema'
import { desc } from 'drizzle-orm'

const db = getDb(Astro.locals.runtime.env.DB)
const allPosts = await db
  .select()
  .from(posts)
  .orderBy(desc(posts.createdAt))
  .all()
---

<AdminLayout title="Gestionar Posts">
  <div
    class="flex flex-col sm:flex-row justify-between items-center mb-6 gap-4"
  >
    <h1 class="text-2xl font-bold text-foreground">Blog Posts</h1>
    <button
      id="newPostBtn"
      class="bg-primary text-primary-foreground px-4 py-2 rounded-lg hover:bg-primary/90 transition flex items-center gap-2 w-full sm:w-auto justify-center"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
          clip-rule="evenodd"></path>
      </svg>
      Nuevo Post
    </button>
  </div>

  <div class="bg-card rounded-lg shadow border border-border overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-border">
        <thead class="bg-muted">
          <tr>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider"
              >Título</th
            >
            <th
              class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider"
              >Slug</th
            >
            <th
              class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider"
              >Fecha</th
            >
            <th
              class="px-6 py-3 text-right text-xs font-medium text-muted-foreground uppercase tracking-wider"
              >Acciones</th
            >
          </tr>
        </thead>
        <tbody class="bg-card divide-y divide-border" id="postsTableBody">
          {
            allPosts.length === 0 ? (
              <tr>
                <td
                  colspan="4"
                  class="px-6 py-10 text-center text-muted-foreground"
                >
                  No hay posts todavía.
                </td>
              </tr>
            ) : (
              allPosts.map((post) => (
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-card-foreground">
                    {post.title}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-muted-foreground">
                    {post.slug}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-muted-foreground">
                    {post.createdAt
                      ? new Date(post.createdAt).toLocaleDateString()
                      : '-'}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <button
                      class="text-primary hover:text-primary/80 mr-4 edit-btn"
                      data-post={JSON.stringify(post)}
                    >
                      Editar
                    </button>
                    <button
                      class="text-destructive hover:text-destructive/80 delete-btn"
                      data-id={post.id}
                    >
                      Eliminar
                    </button>
                  </td>
                </tr>
              ))
            )
          }
        </tbody>
      </table>
    </div>
  </div>

  <!-- Modal -->
  <div
    id="postModal"
    class="fixed inset-0 bg-black/80 hidden flex items-center justify-center z-50 p-4"
  >
    <div
      class="bg-card rounded-lg w-full max-w-2xl max-h-[90vh] overflow-y-auto border border-border"
    >
      <div class="p-6 border-b border-border">
        <h2 id="modalTitle" class="text-xl font-bold text-card-foreground">
          Nuevo Post
        </h2>
      </div>
      <form id="postForm" class="p-6">
        <input type="hidden" id="postId" name="id" />

        <div class="mb-4">
          <label
            class="block text-card-foreground text-sm font-bold mb-2"
            for="title">Título</label
          >
          <input
            type="text"
            name="title"
            id="title"
            class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            required
          />
        </div>

        <div class="mb-4">
          <label
            class="block text-card-foreground text-sm font-bold mb-2"
            for="slug">Slug (URL)</label
          >
          <input
            type="text"
            name="slug"
            id="slug"
            class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            required
          />
          <p class="text-xs text-muted-foreground mt-1">
            Se genera automáticamente del título si se deja vacío.
          </p>
        </div>

        <div class="mb-4">
          <label
            class="block text-card-foreground text-sm font-bold mb-2"
            for="imageFile">Imagen del Post</label
          >
          <input
            type="file"
            id="imageFile"
            accept="image/*"
            class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          />
          <p id="imageStatus" class="text-xs text-muted-foreground mt-1"></p>
          <input type="hidden" name="image" id="image" />
        </div>

        <div class="mb-4">
          <label
            class="block text-card-foreground text-sm font-bold mb-2"
            for="link">Link de Referencia (Opcional)</label
          >
          <input
            type="url"
            name="link"
            id="link"
            placeholder="https://example.com"
            class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          />
        </div>

        <div class="mb-4">
          <label
            class="block text-card-foreground text-sm font-bold mb-2"
            for="content">Contenido</label
          >
          <textarea
            name="content"
            id="content"
            rows="8"
            class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            required></textarea>
        </div>

        <div class="flex justify-end pt-4 border-t border-border mt-4">
          <button
            type="button"
            id="cancelBtn"
            class="bg-secondary text-secondary-foreground px-4 py-2 rounded mr-2 hover:bg-secondary/80 transition"
            >Cancelar</button
          >
          <button
            type="submit"
            id="submitBtn"
            class="bg-primary text-primary-foreground px-4 py-2 rounded hover:bg-primary/90 transition"
            >Guardar</button
          >
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<script>
  const modal = document.getElementById('postModal') as HTMLDivElement
  const form = document.getElementById('postForm') as HTMLFormElement
  const modalTitle = document.getElementById('modalTitle') as HTMLHeadingElement
  const newPostBtn = document.getElementById('newPostBtn') as HTMLButtonElement
  const cancelBtn = document.getElementById('cancelBtn') as HTMLButtonElement
  const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement
  const postIdInput = document.getElementById('postId') as HTMLInputElement
  const titleInput = document.getElementById('title') as HTMLInputElement
  const slugInput = document.getElementById('slug') as HTMLInputElement
  const contentInput = document.getElementById('content') as HTMLTextAreaElement
  const linkInput = document.getElementById('link') as HTMLInputElement
  const imageInput = document.getElementById('image') as HTMLInputElement
  const imageFileInput = document.getElementById(
    'imageFile',
  ) as HTMLInputElement
  const imageStatus = document.getElementById(
    'imageStatus',
  ) as HTMLParagraphElement

  function slugify(text: string) {
    return text
      .toLowerCase()
      .trim()
      .replace(/[^\w\s-]/g, '')
      .replace(/[\s_-]+/g, '-')
      .replace(/^-+|-+$/g, '')
  }

  titleInput.addEventListener('input', () => {
    if (!slugInput.value || slugInput.dataset.auto === 'true') {
      slugInput.value = slugify(titleInput.value)
      slugInput.dataset.auto = 'true'
    }
  })

  slugInput.addEventListener('input', () => {
    slugInput.dataset.auto = 'false'
  })

  function openModal(isEdit = false) {
    modal.classList.remove('hidden')
    modalTitle.textContent = isEdit ? 'Editar Post' : 'Nuevo Post'
    if (!isEdit) {
      slugInput.dataset.auto = 'true'
      imageStatus.textContent = ''
    }
  }

  function closeModal() {
    modal.classList.add('hidden')
    form.reset()
    postIdInput.value = ''
    imageStatus.textContent = ''
  }

  newPostBtn.addEventListener('click', () => {
    openModal(false)
  })

  cancelBtn.addEventListener('click', closeModal)

  modal.addEventListener('click', (e) => {
    if (e.target === modal) closeModal()
  })

  async function uploadImage(file: File) {
    const formData = new FormData()
    formData.append('file', file)

    imageStatus.textContent = 'Subiendo imagen...'
    submitBtn.disabled = true

    try {
      const res = await fetch('/api/upload', {
        method: 'POST',
        body: formData,
      })

      if (!res.ok) throw new Error('Error al subir')

      const data = (await res.json()) as any
      imageInput.value = data.key
      imageStatus.textContent = 'Imagen subida con éxito'
    } catch (err) {
      console.error(err)
      imageStatus.textContent = 'Error al subir imagen'
      throw err
    } finally {
      submitBtn.disabled = false
    }
  }

  imageFileInput.addEventListener('change', async () => {
    if (imageFileInput.files && imageFileInput.files[0]) {
      try {
        await uploadImage(imageFileInput.files[0])
      } catch (e) {
        alert('Error al subir la imagen')
      }
    }
  })

  document.querySelectorAll('.edit-btn').forEach((btn) => {
    btn.addEventListener('click', () => {
      const post = JSON.parse(btn.getAttribute('data-post') || '{}')
      postIdInput.value = post.id
      titleInput.value = post.title
      slugInput.value = post.slug
      slugInput.dataset.auto = 'false'
      contentInput.value = post.content
      linkInput.value = post.link || ''
      imageInput.value = post.image || ''
      imageStatus.textContent = post.image ? 'Imagen actual: ' + post.image : ''
      openModal(true)
    })
  })

  document.querySelectorAll('.delete-btn').forEach((btn) => {
    btn.addEventListener('click', async () => {
      if (!confirm('¿Estás seguro de que quieres eliminar este post?')) return

      const id = btn.getAttribute('data-id')
      try {
        const res = await fetch(`/api/posts/${id}`, { method: 'DELETE' })
        if (res.ok) {
          window.location.reload()
        } else {
          alert('Error al eliminar')
        }
      } catch (e) {
        console.error(e)
        alert('Error al eliminar')
      }
    })
  })

  form.addEventListener('submit', async (e) => {
    e.preventDefault()
    const id = postIdInput.value
    const data = {
      title: titleInput.value,
      slug: slugInput.value,
      content: contentInput.value,
      image: imageInput.value,
      link: linkInput.value,
    }

    try {
      let res
      if (id) {
        res = await fetch(`/api/posts/${id}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data),
        })
      } else {
        res = await fetch('/api/posts', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data),
        })
      }

      if (res.ok) {
        closeModal()
        window.location.reload()
      } else {
        const errData = (await res.json()) as any
        alert('Error al guardar: ' + (errData.message || 'Error desconocido'))
      }
    } catch (e) {
      console.error(e)
      alert('Error en la solicitud')
    }
  })
</script>
