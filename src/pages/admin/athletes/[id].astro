---
import AdminLayout from '../../../layouts/AdminLayout.astro'
import { getDb } from '../../../db/client'
import { users, membershipRequests } from '../../../db/schema'
import { eq, desc } from 'drizzle-orm'

const { id } = Astro.params
const athleteId = parseInt(id || '')

if (isNaN(athleteId)) {
  return Astro.redirect('/admin/athletes')
}

const runtime = Astro.locals.runtime;
const db = getDb(runtime.env.DB);

// Obtener informaci√≥n del usuario
const athlete = await db
  .select()
  .from(users)
  .where(eq(users.id, athleteId))
  .get()

if (!athlete) {
  return Astro.redirect('/admin/athletes')
}

// Obtener la solicitud m√°s reciente para este usuario (para ver sus objetivos)
const lastRequest = await db
  .select()
  .from(membershipRequests)
  .where(eq(membershipRequests.userId, athleteId))
  .orderBy(desc(membershipRequests.createdAt))
  .limit(1)
  .get()

// Parsear objetivos si existen
let goals = []
if (lastRequest?.trainingGoals) {
  try {
    goals = JSON.parse(lastRequest.trainingGoals)
  } catch (e) {
    goals = []
  }
}
---

<AdminLayout title={`Perfil de Atleta: ${athlete.fullName}`}>
  <div class="mb-8">
    <a href="/admin/athletes" class="text-primary hover:underline flex items-center gap-2 mb-4">
      ‚Üê Volver a atletas
    </a>
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-foreground">{athlete.fullName}</h1>
        <p class="text-muted-foreground mt-1">
          Miembro del equipo desde {athlete.createdAt?.toLocaleDateString('es-PA')}
        </p>
      </div>
      <div class="flex gap-3">
        <!-- Podr√≠amos a√±adir botones para editar o dar de baja en el futuro -->
