---
import AdminLayout from '../../layouts/AdminLayout.astro'
import { getDb } from '../../db/client'
import { events } from '../../db/schema'
import { desc } from 'drizzle-orm'

const db = getDb(Astro.locals.runtime.env.DB)
const allEvents = await db
  .select()
  .from(events)
  .orderBy(desc(events.date))
  .all()
---

<AdminLayout title="Gestionar Eventos">
  <div
    class="flex flex-col sm:flex-row justify-between items-center mb-6 gap-4"
  >
    <h1 class="text-2xl font-bold text-foreground">Eventos del Calendario</h1>
    <button
      id="newEventBtn"
      class="bg-primary text-primary-foreground px-4 py-2 rounded-lg hover:bg-primary/90 transition flex items-center gap-2 w-full sm:w-auto justify-center"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
          clip-rule="evenodd"></path>
      </svg>
      Nuevo Evento
    </button>
  </div>

  <div class="bg-card rounded-lg shadow border border-border overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-border">
        <thead class="bg-muted">
          <tr>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider"
              >Título</th
            >
            <th
              class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider"
              >Tipo</th
            >
            <th
              class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider"
              >Fecha</th
            >
            <th
              class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider"
              >Ubicación</th
            >
            <th
              class="px-6 py-3 text-right text-xs font-medium text-muted-foreground uppercase tracking-wider"
              >Acciones</th
            >
          </tr>
        </thead>
        <tbody class="bg-card divide-y divide-border" id="eventsTableBody">
          {
            allEvents.length === 0 ? (
              <tr>
                <td
                  colspan="5"
                  class="px-6 py-10 text-center text-muted-foreground"
                >
                  No hay eventos todavía.
                </td>
              </tr>
            ) : (
              allEvents.map((event) => (
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-card-foreground">
                    {event.title}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-muted-foreground">
                    <span class="capitalize">{event.type || '-'}</span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-muted-foreground">
                    {event.date
                      ? new Date(event.date).toLocaleDateString()
                      : '-'}{' '}
                    {event.time && `(${event.time})`}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-muted-foreground">
                    {event.location}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <button
                      class="text-primary hover:text-primary/80 mr-4 edit-btn"
                      data-event={JSON.stringify(event)}
                    >
                      Editar
                    </button>
                    <button
                      class="text-destructive hover:text-destructive/80 delete-btn"
                      data-id={event.id}
                    >
                      Eliminar
                    </button>
                  </td>
                </tr>
              ))
            )
          }
        </tbody>
      </table>
    </div>
  </div>

  <!-- Modal -->
  <div
    id="eventModal"
    class="fixed inset-0 bg-black/80 hidden flex items-center justify-center z-50 p-4"
  >
    <div
      class="bg-card rounded-lg w-full max-w-2xl max-h-[90vh] overflow-y-auto border border-border"
    >
      <div class="p-6 border-b border-border">
        <h2 id="modalTitle" class="text-xl font-bold text-card-foreground">
          Nuevo Evento
        </h2>
      </div>
      <form id="eventForm" class="p-6">
        <input type="hidden" id="eventId" name="id" />

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
          <div>
            <label
              class="block text-card-foreground text-sm font-bold mb-2"
              for="title">Título</label
            >
            <input
              type="text"
              name="title"
              id="title"
              class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
              required
            />
          </div>
          <div>
            <label
              class="block text-card-foreground text-sm font-bold mb-2"
              for="type">Tipo de Evento</label
            >
            <select
              name="type"
              id="type"
              class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
              required
            >
              <option value="entreno">Entreno</option>
              <option value="competencia">Competencia</option>
              <option value="social">Social</option>
              <option value="cumpleaños">Cumpleaños</option>
              <option value="longrun">Long Run</option>
              <option value="clase">Clase</option>
            </select>
          </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
          <div>
            <label
              class="block text-card-foreground text-sm font-bold mb-2"
              for="date">Fecha</label
            >
            <input
              type="date"
              name="date"
              id="date"
              class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
              required
            />
          </div>
          <div>
            <label
              class="block text-card-foreground text-sm font-bold mb-2"
              for="time">Hora (ej: 5:30 AM)</label
            >
            <input
              type="text"
              name="time"
              id="time"
              placeholder="5:30 AM"
              class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            />
          </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
          <div>
            <label
              class="block text-card-foreground text-sm font-bold mb-2"
              for="cost">Costo</label
            >
            <input
              type="text"
              name="cost"
              id="cost"
              placeholder="Gratis o $20.00"
              class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            />
          </div>
          <div>
            <label
              class="block text-card-foreground text-sm font-bold mb-2"
              for="classification">Clasificación</label
            >
            <select
              name="classification"
              id="classification"
              class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            >
              <option value="public">Todo Público</option>
              <option value="team">Exclusivo Team</option>
            </select>
          </div>
        </div>

        <div class="mb-4">
          <label
            class="block text-card-foreground text-sm font-bold mb-2"
            for="location">Ubicación</label
          >
          <input
            type="text"
            name="location"
            id="location"
            class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          />
        </div>

        <div class="mb-4">
          <label
            class="block text-card-foreground text-sm font-bold mb-2"
            for="description">Descripción</label
          >
          <textarea
            name="description"
            id="description"
            rows="3"
            class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          ></textarea>
        </div>

        <div class="mb-4">
          <label
            class="block text-card-foreground text-sm font-bold mb-2"
            for="gpxFile">Archivo GPX (Opcional)</label
          >
          <input
            type="file"
            id="gpxFile"
            accept=".gpx"
            class="bg-input text-foreground shadow-sm border border-input rounded w-full py-2 px-3 leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          />
          <input type="hidden" name="gpxUrl" id="gpxUrl" />
          <p id="gpxStatus" class="text-xs mt-1 text-muted-foreground"></p>
        </div>

        <div class="flex justify-end pt-4 border-t border-border mt-4">
          <button
            type="button"
            id="cancelBtn"
            class="bg-secondary text-secondary-foreground px-4 py-2 rounded mr-2 hover:bg-secondary/80 transition"
            >Cancelar</button
          >
          <button
            type="submit"
            id="submitBtn"
            class="bg-primary text-primary-foreground px-4 py-2 rounded hover:bg-primary/90 transition"
            >Guardar</button
          >
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<script>
  const modal = document.getElementById('eventModal') as HTMLElement
  const form = document.getElementById('eventForm') as HTMLFormElement
  const modalTitle = document.getElementById('modalTitle') as HTMLElement
  const newEventBtn = document.getElementById(
    'newEventBtn',
  ) as HTMLButtonElement
  const cancelBtn = document.getElementById('cancelBtn') as HTMLButtonElement
  const eventIdInput = document.getElementById('eventId') as HTMLInputElement
  const titleInput = document.getElementById('title') as HTMLInputElement
  const typeInput = document.getElementById(
    'type',
  ) as unknown as HTMLSelectElement
  const dateInput = document.getElementById('date') as HTMLInputElement
  const timeInput = document.getElementById('time') as HTMLInputElement
  const costInput = document.getElementById('cost') as HTMLInputElement
  const classificationInput = document.getElementById(
    'classification',
  ) as unknown as HTMLSelectElement
  const locationInput = document.getElementById('location') as HTMLInputElement
  const descriptionInput = document.getElementById(
    'description',
  ) as unknown as HTMLTextAreaElement
  const gpxFileInput = document.getElementById('gpxFile') as HTMLInputElement
  const gpxUrlInput = document.getElementById('gpxUrl') as HTMLInputElement
  const gpxStatus = document.getElementById('gpxStatus') as HTMLElement
  const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement

  function openModal(isEdit = false) {
    if (modal) modal.classList.remove('hidden')
    if (modalTitle)
      modalTitle.textContent = isEdit ? 'Editar Evento' : 'Nuevo Evento'
    if (gpxStatus) gpxStatus.textContent = ''
  }

  function closeModal() {
    if (modal) modal.classList.add('hidden')
    if (form) form.reset()
    if (eventIdInput) eventIdInput.value = ''
    if (gpxUrlInput) gpxUrlInput.value = ''
  }

  if (newEventBtn) {
    newEventBtn.addEventListener('click', () => {
      openModal(false)
    })
  }

  if (cancelBtn) cancelBtn.addEventListener('click', closeModal)

  // Close on outside click
  if (modal) {
    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal()
    })
  }

  // Handle GPX File Upload
  if (gpxFileInput) {
    gpxFileInput.addEventListener('change', async (e) => {
      const target = e.target as HTMLInputElement
      const file = target.files?.[0]
      if (!file) return

      if (gpxStatus) {
        gpxStatus.textContent = 'Subiendo...'
        gpxStatus.className = 'text-xs mt-1 text-blue-500'
      }
      if (submitBtn) submitBtn.disabled = true

      const formData = new FormData()
      formData.append('file', file)

      try {
        const res = await fetch('/api/upload', {
          method: 'POST',
          body: formData,
        })

        if (res.ok) {
          const data = (await res.json()) as { key: string }
          if (gpxUrlInput) gpxUrlInput.value = data.key
          if (gpxStatus) {
            gpxStatus.textContent = 'Archivo subido con éxito'
            gpxStatus.className = 'text-xs mt-1 text-green-500'
          }
        } else {
          if (gpxStatus) {
            gpxStatus.textContent = 'Error al subir archivo'
            gpxStatus.className = 'text-xs mt-1 text-red-500'
          }
        }
      } catch (err) {
        console.error(err)
        if (gpxStatus) {
          gpxStatus.textContent = 'Error de conexión'
          gpxStatus.className = 'text-xs mt-1 text-red-500'
        }
      } finally {
        if (submitBtn) submitBtn.disabled = false
      }
    })
  }

  // Edit buttons
  document.querySelectorAll('.edit-btn').forEach((btn) => {
    btn.addEventListener('click', () => {
      const eventData = btn.getAttribute('data-event')
      if (!eventData) return

      const event = JSON.parse(eventData)
      if (eventIdInput) eventIdInput.value = event.id
      if (titleInput) titleInput.value = event.title
      if (typeInput) typeInput.value = event.type || 'entreno'
      if (costInput) costInput.value = event.cost || ''
      if (classificationInput)
        classificationInput.value = event.classification || 'public'
      if (timeInput) timeInput.value = event.time || ''

      // Format date for date input (YYYY-MM-DD)
      if (event.date && dateInput) {
        const d = new Date(event.date)
        const dateString = d.toISOString().split('T')[0]
        dateInput.value = dateString
      }

      if (locationInput) locationInput.value = event.location || ''
      if (descriptionInput) descriptionInput.value = event.description || ''
      if (gpxUrlInput) gpxUrlInput.value = event.gpxUrl || ''
      if (event.gpxUrl && gpxStatus) {
        gpxStatus.textContent = 'Archivo actual: ' + event.gpxUrl
        gpxStatus.className = 'text-xs mt-1 text-muted-foreground'
      }
      openModal(true)
    })
  })

  // Delete buttons
  document.querySelectorAll('.delete-btn').forEach((btn) => {
    btn.addEventListener('click', async () => {
      if (!confirm('¿Estás seguro de que quieres eliminar este evento?')) return

      const id = btn.getAttribute('data-id')
      try {
        const res = await fetch(`/api/actividades/${id}`, { method: 'DELETE' })
        if (res.ok) {
          window.location.reload()
        } else {
          alert('Error al eliminar')
        }
      } catch (e) {
        console.error(e)
        alert('Error al eliminar')
      }
    })
  })

  // Form submission
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault()
      const id = eventIdInput?.value
      const data = {
        title: titleInput?.value,
        type: typeInput?.value,
        date: dateInput?.value,
        time: timeInput?.value,
        cost: costInput?.value,
        classification: classificationInput?.value,
        location: locationInput?.value,
        description: descriptionInput?.value,
        gpxUrl: gpxUrlInput?.value,
      }

      try {
        let res
        if (id) {
          // Update
          res = await fetch(`/api/actividades/${id}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data),
          })
        } else {
          // Create
          res = await fetch('/api/actividades', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data),
          })
        }

        if (res.ok) {
          closeModal()
          window.location.reload()
        } else {
          alert('Error al guardar')
        }
      } catch (e) {
        console.error(e)
        alert('Error en la solicitud')
      }
    })
  }
</script>
